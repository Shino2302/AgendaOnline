@model List<ListaNotasModel>;
@{
    ViewData["Title"] = "Tus Notas";
}
<link rel="stylesheet" href=""/>
<link rel="preconnect" href="https://fonts.googleapis.com" asp-append-version="true">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin asp-append-version="true">
<link href="https://fonts.googleapis.com/css2?family=Gabarito:wght@400;800&display=swap" rel="stylesheet" asp-append-version="true">
<h1>Notas de @ViewData["Mensaje"]</h1>
<div class="contenedorPrincipal">
    <div>

        @if (Model != null)
        {
            foreach (var Item in Model)
            {
                <table>
                    <thead>@Html.DisplayFor(modelItem => Item.Indice)</thead>
                    <div>
                        <form asp-action="BorrarNota" asp-controller="Principal" method="post" onsubmit="return confirm('¿Estas seguro que deseas eliminar esta nota?')">
                            <input type="hidden" name="idNota" value="@Item.IdNotes">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </div>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => Item.Nota)</td>
                        </tr>
                    </tbody>
                </table>
            }
        }
    </div>
</div>