@model UsuairosModel
@{
    ViewData["Title"] = "Inicio";
    Layout = null;
}

<link href="~/css/login.css" rel="stylesheet" />

<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="mb-4">Iniciar Sesión</h2>
                <form asp-action="Index" asp-controller="LoginRegister" method="post">
                    <div class="form-group">
                        <label for="usernameOrEmail">Nombre de Usuario: </label>
                        <br/>
                        <input asp-for="UserName" type="text" placeholder="Ingresa tu nombre de usuario" name="userName">
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña:</label>
                        <br/>
                        <input asp-for="Pass" type="password" class="form-control" placeholder="Contraseña" name="pass">
                    </div>
                    <br/>
                    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                </form>
                <div class="mt-3">
                    <a href="#">¿Olvidaste tu contraseña?</a>
                </div>
                <div class="mt-3">

                </div>
            </div>
        </div>
    </div>
 </body>
