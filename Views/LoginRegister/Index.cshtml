@model UsuairosModel
@{
    ViewData["Title"] = "Inicio";
    Layout = null;
}

<link href="~/css/login.css" rel="stylesheet" />

<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 >Iniciar Sesión</h1>
                <form asp-action="Index" asp-controller="LoginRegister" method="post">
                    <div class="form-group">
                        <label for="usernameOrEmail">Nombre de Usuario: </label>
                        <br/>
                        <input type="text" placeholder="Ingresa tu nombre de usuario" name="userName">
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña:</label>
                        <br/>
                        <input type="password" class="form-control" placeholder="Contraseña" name="pass">
                    </div>
                    <br/>
                    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                    @if (ViewData["Mensaje"] != null)
                    {
                        <div>
                            @ViewData["Mensaje"]
                        </div>
                    }
                </form>
                <div class="mt-3">
                    <a href="#">¿Olvidaste tu contraseña?</a>
                </div>
                <div class="mt-3">
                    <a asp-action="Registro" asp-controller="LoginRegister">¿No tienes cuenta?</a>
                </div>
            </div>
        </div>
    </div>
 </body>
